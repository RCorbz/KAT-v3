generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified Boolean   @default(false)
  image         String?
  phone         String?
  role          String    @default("user") // "admin" or "user"
  banned        Boolean?  @default(false)
  banReason     String?
  banExpires    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  appointments  Appointment[]
  reviews       Review[]
  retentionLogs RetentionLog[]
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id            String    @id @default(cuid())
  accountId     String
  providerId    String
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken   String?
  refreshToken  String?
  idToken       String?
  expiresAt     DateTime?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Clinic {
  id          String           @id @default(cuid())
  slug        String           @unique
  name        String
  address     String
  city        String
  state       String
  zip         String
  phone       String
  isActive    Boolean          @default(true)
  googleReviewUrl String?      // For Reputation Engine redirect
  openDate    DateTime?        // For "Fall 2026"
  
  // Doctor/Provider Info
  doctorName      String?
  doctorPicUrl    String?
  doctorBio       String?
  doctorPhone     String?
  doctorEmail     String?
  doctorType      String?
  additionalInfo  Json?        // Flexible payload for dynamic fields
  
  schedules   ClinicSchedule[]
  services    Service[]        
  appointments Appointment[]
  campaignSettings CampaignSettings[]
}

model ClinicSchedule {
  id        String   @id @default(cuid())
  clinicId  String
  clinic    Clinic   @relation(fields: [clinicId], references: [id])
  dayOfWeek Int      // 0-6 (Sun-Sat)
  openTime  String   // "09:00"
  closeTime String   // "17:00"
  isActive  Boolean  @default(true)

  @@unique([clinicId, dayOfWeek])
}

model Service {
  id          String   @id @default(cuid())
  clinicId    String
  clinic      Clinic   @relation(fields: [clinicId], references: [id])
  name        String
  description String?
  price       Decimal
  duration    Int      // In minutes
  isUpsell    Boolean  @default(false)
  
  appointments Appointment[]
}

model IntakeQuestion {
  id        String   @id @default(cuid())
  text      String
  jsonKey   String   @unique // e.g., "hasSleepApnea"
  type      String   // "boolean", "text", "date"
  isActive  Boolean  @default(true)
  order     Int      @default(0)
}

model Appointment {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  clinicId    String
  clinic      Clinic    @relation(fields: [clinicId], references: [id])
  
  services    Service[] 
  
  startTime   DateTime
  endTime     DateTime
  status      String    @default("booked") // "booked", "completed", "cancelled"
  
  reviews     Review[]
}

model CampaignSettings {
  id              String   @id @default(cuid())
  clinicId        String
  clinic          Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  phaseName       String   // "phase1", "phase2", "phase3", etc
  triggerDays     Int      // 60, 30, 7
  smsTemplate     String   @default("")
  emailTemplate   String   @default("")
  sendSms         Boolean  @default(true)
  sendEmail       Boolean  @default(false)
  isActive        Boolean  @default(true)
  
  lastTestSmsStatus   String?
  lastTestSmsAt       DateTime?
  lastTestEmailStatus String?
  lastTestEmailAt     DateTime?

  @@unique([clinicId, phaseName])
}

model RetentionLog {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaign      String   // "phase1", "phase2", "phase3"
  sentAt        DateTime @default(now())
  status        String   // "sent", "failed"
  
  @@unique([userId, campaign]) 
}

model Review {
  id            String   @id @default(cuid())
  appointmentId String?  // Optional because seeded reviews might not have real appointments
  appointment   Appointment? @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  userId        String?  // Optional for seeded reviews
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating        Int
  feedbackText  String?
  aiTheme       String?
  status        String   @default("pending") // "pending", "approved", "rejected"
  isFeatured    Boolean  @default(false)
  createdAt     DateTime @default(now())
  reviewerName  String?  // For seeded reviews
}
